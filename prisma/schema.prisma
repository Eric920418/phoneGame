generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// é¦–é å…§å®¹å€å¡Š
model ContentBlock {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  payload   Json     @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// IP é»‘åå–®ï¼ˆå®‰å…¨æ©Ÿåˆ¶ï¼‰
model IpBlocklist {
  id        Int       @id @default(autoincrement())
  ipAddress String    @unique
  attempts  Int       @default(0)
  blockedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("ip_blocklist")
}

// è«–å£‡åˆ†é¡
model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  slug        String   @unique
  description String?
  icon        String?
  color       String   @default("#c9a227")
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  posts       Post[]

  @@map("categories")
}

// è«–å£‡å¸–å­
model Post {
  id          Int       @id @default(autoincrement())
  title       String
  slug        String    @unique
  content     String
  excerpt     String?
  author      String
  authorEmail String?
  coverImage  String?
  views       Int       @default(0)
  isPinned    Boolean   @default(false)
  isLocked    Boolean   @default(false)
  categoryId  Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  comments    Comment[]
  category    Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId])
  @@index([slug])
  @@map("posts")
}

// è«–å£‡è©•è«–ï¼ˆæ”¯æŒåµŒå¥—å›è¦†ï¼‰
model Comment {
  id          Int       @id @default(autoincrement())
  content     String
  author      String
  authorEmail String?
  postId      Int
  parentId    Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  parent      Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies     Comment[] @relation("CommentReplies")
  post        Post      @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([parentId])
  @@map("comments")
}

// å®˜æ–¹å…¬å‘Š
model Announcement {
  id          Int       @id @default(autoincrement())
  title       String
  slug        String    @unique
  content     String
  excerpt     String?
  coverImage  String?
  type        String    @default("general") // general, update, event, maintenance, war
  isPinned    Boolean   @default(false)
  isHot       Boolean   @default(false)
  isPublished Boolean   @default(true)
  publishedAt DateTime  @default(now())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug])
  @@index([type])
  @@index([publishedAt])
  @@map("announcements")
}

// ç”¨æˆ¶ç³»çµ±
model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  passwordHash  String
  name          String
  avatar        String?        @default("ğŸ‘¤")
  gameHours     Int            @default(0)
  isVerified    Boolean        @default(false)
  isAdmin       Boolean        @default(false)
  isBanned      Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  reviews       Review[]
  reviewReplies ReviewReply[]
  reviewLikes   ReviewLike[]
  reviewReports ReviewReport[]

  @@index([email])
  @@map("users")
}

// ç”¨æˆ¶è©•åƒ¹
model Review {
  id            Int            @id @default(autoincrement())
  content       String
  rating        Int            @default(5) // 1-5 æ˜Ÿ
  isRecommended Boolean        @default(true)
  isApproved    Boolean        @default(false) // éœ€è¦å¯©æ ¸
  isHidden      Boolean        @default(false)
  userId        Int
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  replies       ReviewReply[]
  likes         ReviewLike[]
  reports       ReviewReport[]

  @@index([userId])
  @@index([isApproved])
  @@index([createdAt])
  @@map("reviews")
}

// è©•åƒ¹å›è¦†
model ReviewReply {
  id        Int      @id @default(autoincrement())
  content   String
  reviewId  Int
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  review    Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([reviewId])
  @@index([userId])
  @@map("review_replies")
}

// è©•åƒ¹é»è´Š
model ReviewLike {
  id        Int      @id @default(autoincrement())
  reviewId  Int
  userId    Int
  createdAt DateTime @default(now())
  review    Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([reviewId, userId]) // æ¯äººåªèƒ½é»è´Šä¸€æ¬¡
  @@index([reviewId])
  @@index([userId])
  @@map("review_likes")
}

// è©•åƒ¹èˆ‰å ±
model ReviewReport {
  id        Int      @id @default(autoincrement())
  reason    String
  status    String   @default("pending") // pending, resolved, dismissed
  reviewId  Int
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  review    Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([reviewId])
  @@index([userId])
  @@index([status])
  @@map("review_reports")
}
