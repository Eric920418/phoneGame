generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 首頁內容區塊
model ContentBlock {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  payload   Json     @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// IP 黑名單（安全機制）
model IpBlocklist {
  id        Int       @id @default(autoincrement())
  ipAddress String    @unique
  attempts  Int       @default(0)
  blockedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("ip_blocklist")
}

// 論壇分類
model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  slug        String   @unique
  description String?
  icon        String?
  color       String   @default("#c9a227")
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  posts       Post[]

  @@map("categories")
}

// 論壇帖子
model Post {
  id          Int       @id @default(autoincrement())
  title       String
  slug        String    @unique
  content     String
  excerpt     String?
  author      String
  authorEmail String?
  coverImage  String?
  views       Int       @default(0)
  isPinned    Boolean   @default(false)
  isLocked    Boolean   @default(false)
  categoryId  Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  comments    Comment[]
  category    Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId])
  @@index([slug])
  @@map("posts")
}

// 論壇評論（支持嵌套回覆）
model Comment {
  id          Int       @id @default(autoincrement())
  content     String
  author      String
  authorEmail String?
  postId      Int
  parentId    Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  parent      Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies     Comment[] @relation("CommentReplies")
  post        Post      @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([parentId])
  @@map("comments")
}

// 官方公告
model Announcement {
  id          Int       @id @default(autoincrement())
  title       String
  slug        String    @unique
  content     String
  excerpt     String?
  coverImage  String?
  type        String    @default("general") // general, update, event, maintenance
  isPinned    Boolean   @default(false)
  isPublished Boolean   @default(true)
  publishedAt DateTime  @default(now())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug])
  @@index([type])
  @@index([publishedAt])
  @@map("announcements")
}
